@model List<Model.EF.Menu>
<nav class="navbar navbar-expand-lg navbar-light bg-primary" id="nav">
    <div class="container" id="menu">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a class="nav-link" href="/">Trang chủ</a>
                </li>
                <li>
                    <a class="nav-link" href="/news/tuyen-sinh">Tuyển sinh 2021</a>
                </li>
               
                @foreach (var item in Model)
                {
                    if (item.link == "gioi-thieu")
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="/news/@item.link">
                                @item.text
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var subItem in item.SubMenus)
                                {
                                    if (subItem.link == "cac-bo-mon")
                                    {
                                        <li>
                                            <a href="#">@subItem.text</a>
                                            <ul class="sub-menu">
                                                <li><a href="/news/bo-mon-co-dien-tu">Bộ môn Cơ điện tử</a></li>
                                                <li>
                                                    <a href="/news/bo-mon-cong-nghe-vat-lieu">Bộ môn Công nghệ vật liệu</a>
                                                    <ul class="menu2">
                                                        <li><a href="/news/chuyen-nganh-gcal">Chuyên ngành GCAL</a></li>
                                                        <li><a href="/news/nganh-ktvl">Ngành KTVL</a></li>

                                                    </ul>
                                                </li>
                                                <li><a href="/news/bo-mon-che-tao-may">Bộ môn Chế tạo máy</a></li>
                                                <li><a href="/news/bo-mon-thiet-ke-co-khi">Bộ môn Thiết kế cơ khí</a></li>
                                                <li><a href="/news/bo-mon-chi-tiet-may">Bộ môn Chi tiết máy</a></li>s
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a href="/news/@subItem.link">@subItem.text</a>
                                        </li>
                                    }
                                }


                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="/@item.link">
                                @item.text
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var subItem in item.SubMenus)
                                {
                                    <li>
                                        <a href="/@subItem.link">@subItem.text</a>
                                    </li>
                                }


                            </ul>
                        </li>
                    }

                }

            </ul>
            <ul class="navbar-nav ml-auto"></ul>
        </div>
    </div>
</nav>
