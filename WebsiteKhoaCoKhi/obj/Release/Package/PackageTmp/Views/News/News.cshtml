@model PagedList.IPagedList<Model.EF.New>
@using PagedList.Mvc;
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var SubMenus = (List<Model.EF.SubMenu>)ViewBag.SubMenus;
}

<div id="body">
    <div class="container" id="head-body">
        <div style="padding-left:15px; padding-right:15px">
            <div class="row" id="firstRow">
                <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12" style="padding-top: 13px;padding-left:0;">
                    <p>@DateTime.Now.ToString("HH:mm 'Ngày' dd/MM/yyyy")</p>
                </div>
                <div class="col-md-6" style="padding-bottom: 15px;padding-right:0;">
                    <form>
                        <div class="search input-group">
                            <input type="text" style="border: none;" class="form-control" placeholder="Tìm kiếm theo từ khóa">
                            <div class="input-group-btn">
                                <button type="submit" class="btn">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row" id="secondRow">
            <div class="col-md-8 col-lg-8 col-sm-8 col-xs-12" style="margin-top: -5px">
                <div class="head-name">
                    <p>@ViewBag.SubText</p>
                </div>
                <div class="news-content">
                    <h2>@ViewBag.SubText</h2>
                </div>
                @foreach (var item in Model)
                {
                    <div class="list-news">
                        <div class="left-img">
                            <a href="/news/@item.metaTitle"><img src="@item.images" /></a>
                        </div>
                        <div class="right-content">
                            <a href="/news/@item.metaTitle"><h5>@item.title</h5></a>
                            <p><span class="time">19:10</span>- 26/2/2019</p>
                            @item.name
                        </div>
                    </div>
                }

