@model List<Model.EF.Menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Menu</h2>
<div class="container-fluid">

    <!-- Page Heading -->

    <div class="card shadow mb-4">

        <div class="card-body">
            
            <div class="table-responsive" style="margin-top: 20px;">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sửa, xóa</th>
                            <th>Id</th>
                            <th>Tên menu</th>
                            <th>Link</th>
                            <th>Thứ tự xuất hiện</th>
                            <th>Loại menu</th>
                            
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Sửa, xóa</th>
                            <th>Id</th>
                            <th>Tên menu</th>
                            <th>Link</th>
                            <th>Thứ tự xuất hiện</th>
                            <th>Loại menu</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.id">
                                <td>
                                    <a href="#">Sửa</a>
                                    |
                                    <a href="#">Xóa</a>
                                </td>
                                <td>@item.id</td>
                                <td>@item.text</td>
                                <td>@item.link</td>
                                <td>@item.displayOrder</td>
                                <td>@item.typeMenu</td>
                               
                            </tr>
                        }



                    </tbody>
                </table>
                <a href="/Admin/New/Create" class="btn btn-primary">Thêm mới</a>
                
            </div>
        </div>
    </div>

</div>
